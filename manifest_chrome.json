{
  "manifest_version": 2,
  "name": "Rogue Dex",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://pokerogue.net/*",
    "https://api.pokerogue.net/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://api.pokerogue.net/*", "https://pokerogue.net/*"],
      "js" : ["inject.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://pokerogue.net/*"],
      "js" : ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": ["inject.js", "injected.js"]
}